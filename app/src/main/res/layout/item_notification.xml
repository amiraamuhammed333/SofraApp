<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:layout_margin="@dimen/dim_8dp"
    android:background="@drawable/shadow_rectangle"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:layout_width="@dimen/dim_250dp"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintStart_toEndOf="@id/item_notification_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_15sp"
        android:id="@+id/item_notification_tv_title"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginBottom="@dimen/dim_16dp"
        app:layout_constraintBottom_toBottomOf="parent"

        />

    <TextView
        android:id="@+id/item_notification_tv_time"
        android:layout_width="@dimen/dim_200dp"
        android:layout_height="26dp"
        android:paddingStart="@dimen/dim_8dp"
        android:drawableStart="@drawable/ic_watch"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/dim_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dim_70dp"
        app:layout_constraintStart_toEndOf="@id/item_notification_iv"
        app:layout_constraintTop_toBottomOf="@id/item_notification_tv_title"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_notification_tv_title"
        app:srcCompat="@drawable/ic_notifications_black"
        android:layout_marginStart="@dimen/dim_4dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="@dimen/dim_16dp"
        android:id="@+id/item_notification_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>