<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginEnd="@dimen/dim_4dp"
    android:layout_marginTop="@dimen/dim_4dp"
    android:layout_marginStart="@dimen/dim_4dp"
    android:layout_height="match_parent"
   >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="@dimen/dim_300dp"
    android:layout_height="@dimen/dim_200dp"
    android:background="@drawable/shadow_rectangle"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dim_25dp"
        android:id="@+id/log_out_tv"
        android:textSize="@dimen/dim_20sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/rae_you_sure_you_want_to_exit"
        />
    <ImageButton
        android:layout_width="@dimen/dim_50dp"
        android:layout_height="@dimen/dim_50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/log_out_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/dim_40dp"
        android:id="@+id/log_out_ib_cancel"
        android:background="@drawable/shadow_oval"
        app:srcCompat="@drawable/ic_cancel"
        />

    <ImageButton
        android:layout_width="@dimen/dim_50dp"
        android:layout_height="@dimen/dim_50dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dim_40dp"
        app:layout_constraintTop_toBottomOf="@id/log_out_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/dim_40dp"
        app:srcCompat="@drawable/ic_confirm"
        android:id="@+id/log_out_ib_confirm"
        android:background="@drawable/shadow_oval"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>