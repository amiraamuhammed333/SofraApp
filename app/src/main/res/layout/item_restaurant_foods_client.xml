<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_230dp"
    android:layout_margin="@dimen/dim_16dp"
    android:id="@+id/item_restaurant_constrainLayout"

    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/item_restaurant_foods_photo"
        android:background="@drawable/shadow_rectangle"
        />

    <TextView
        android:layout_width="@dimen/dim_110dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dim_15sp"
        android:text="@string/offer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="@dimen/dim_8dp"
        android:background="@drawable/btn"
        android:textColor="@color/white"
        android:id="@+id/item_restaurant_foods_offerPrice"
        android:layout_marginTop="@dimen/dim_20dp"

        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dim_90dp"
        android:layout_height="@dimen/dim_100dp"
        app:layout_constraintTop_toTopOf="@id/item_restaurant_foods_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dim_8dp"
        android:layout_marginStart="@dimen/dim_8dp"
        android:id="@+id/item_restaurant_foods_constrain"
        android:background="@drawable/shadow_rectangle"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="@dimen/dim_8dp"
            android:layout_marginTop="@dimen/dim_16dp"
            android:paddingTop="@dimen/dim_4dp"
            android:textSize="@dimen/dim_15sp"
            android:textColor="@color/red"
            android:id="@+id/item_restaurant_foods_tv_name"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_30dp"
            app:layout_constraintTop_toBottomOf="@id/item_restaurant_foods_tv_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/dim_15sp"
            android:paddingStart="@dimen/dim_8dp"
            android:id="@+id/item_restaurant_foods_tv_description"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_30dp"
            app:layout_constraintTop_toBottomOf="@id/item_restaurant_foods_tv_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/dim_15sp"
            android:paddingBottom="@dimen/dim_8dp"
            android:paddingStart="@dimen/dim_8dp"
            android:id="@+id/item_restaurant_foods_tv_price"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>