<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_150dp"
    android:background="@color/white"

    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dim_300dp"
        android:layout_height="@dimen/dim_140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/dim_8dp"
        android:id="@+id/item_restaurant_constrain"
        android:layout_marginEnd="@dimen/dim_50dp"
        android:background="@drawable/shadow_rectangle"

        >
        <TextView
            android:layout_width="@dimen/dim_150dp"
            android:layout_height="@dimen/dim_30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="@dimen/dim_45dp"
            android:id="@+id/item_restaurant_tv_name"
            android:padding="@dimen/dim_4dp"
            android:textSize="@dimen/dim_20sp"
            android:textColor="@color/red"
            />

        <RatingBar
            android:layout_width="@dimen/dim_150dp"
            android:layout_height="@dimen/dim_45dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:stepSize="0.2"
            android:numStars="4"
            android:rating="1"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:id="@+id/item_restaurant_rb"
            android:padding="@dimen/dim_4dp"
            android:layout_marginEnd="@dimen/dim_45dp"
            app:layout_constraintTop_toBottomOf="@id/item_restaurant_tv_name"
            />

        <TextView
            android:layout_width="@dimen/dim_150dp"
            android:layout_height="@dimen/dim_25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_restaurant_rb"
            android:layout_marginEnd="@dimen/dim_45dp"
            android:layout_marginTop="@dimen/dim_4dp"
            android:id="@+id/item_restaurant_tv_min_charger"
            android:padding="@dimen/dim_4dp"
            android:textSize="@dimen/dim_12sp"
            />

        <TextView
            android:layout_width="@dimen/dim_150dp"
            android:layout_height="@dimen/dim_25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_restaurant_tv_min_charger"
            android:layout_marginEnd="@dimen/dim_45dp"
            android:id="@+id/item_restaurant_tv_delivery_cost"
            android:padding="@dimen/dim_4dp"
            android:textSize="@dimen/dim_12sp"
            />

        <TextView
            android:layout_width="@dimen/dim_70dp"
            android:layout_height="@dimen/dim_30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dim_45dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dim_16dp"
            app:layout_constraintEnd_toStartOf="@id/item_restaurant_tv_min_charger"
            android:layout_marginEnd="@dimen/dim_16dp"
            android:id="@+id/item_restaurant_tv_state"
            android:textSize="@dimen/dim_12sp"
            android:gravity="center"
            android:drawableEnd="@drawable/ic_satate"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>


