<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/shadow_rectangle"
    android:layout_height="@dimen/dim_200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/dim_100dp"
        android:layout_height="@dimen/dim_100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dim_8dp"
        app:civ_border_width="2dp"
        android:id="@+id/item_order_client_circleImage"
        app:civ_border_color="@color/dark_grey"
        android:background="@drawable/circle"
        android:layout_marginTop="@dimen/dim_32dp"/>

    <TextView
        android:layout_width="@dimen/dim_150dp"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_order_client_circleImage"
        android:id="@+id/item_order_client_et_name"
        android:layout_marginStart="@dimen/dim_16dp"
        android:textSize="@dimen/dim_15sp"
        android:layout_marginTop="@dimen/dim_16dp" />

    <TextView
        android:layout_width="@dimen/dim_150dp"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintTop_toBottomOf="@id/item_order_client_et_name"
        app:layout_constraintStart_toEndOf="@+id/item_order_client_circleImage"
        android:id="@+id/item_order_client_et_order_id"
        android:layout_marginStart="@dimen/dim_16dp"
        android:textSize="@dimen/dim_15sp"
        android:layout_marginTop="@dimen/dim_4dp" />

    <TextView
        android:layout_width="@dimen/dim_150dp"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintTop_toBottomOf="@id/item_order_client_et_order_id"
        app:layout_constraintStart_toEndOf="@+id/item_order_client_circleImage"
        android:id="@+id/item_order_client_et_total"
        android:layout_marginStart="@dimen/dim_16dp"
        android:textSize="@dimen/dim_15sp"
        android:layout_marginTop="@dimen/dim_4dp" />


    <TextView
        android:layout_width="@dimen/dim_250dp"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintTop_toBottomOf="@id/item_order_client_et_total"
        app:layout_constraintStart_toEndOf="@+id/item_order_client_circleImage"
        android:id="@+id/item_order_client_et_address"
        android:layout_marginStart="@dimen/dim_16dp"
        android:textSize="@dimen/dim_15sp"
        android:layout_marginBottom="@dimen/dim_8dp"
        android:layout_marginTop="@dimen/dim_4dp" />

    <Button
        android:layout_width="@dimen/dim_200dp"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintTop_toBottomOf="@id/item_order_client_et_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dim_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:id="@+id/item_order_client_btn"
        android:background="@drawable/btn"
        />

</androidx.constraintlayout.widget.ConstraintLayout>