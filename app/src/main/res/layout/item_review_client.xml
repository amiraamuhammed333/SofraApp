<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_80dp"
    android:background="@drawable/shadow_rectangle"
    android:layout_margin="@dimen/dim_8dp">
    <TextView
        android:layout_width="@dimen/dim_150dp"
        android:layout_height="@dimen/dim_25dp"
        android:id="@+id/itme_review_tv_name"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/dim_20sp"
        android:textColor="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dim_8dp"
        android:paddingStart="@dimen/dim_4dp"
        android:layout_marginTop="@dimen/dim_4dp"
        />

    <TextView
        android:layout_width="@dimen/dim_200dp"
        android:layout_height="0dp"
        android:id="@+id/itme_review_tv_desc"
        android:layout_marginBottom="@dimen/dim_4dp"
        android:textSize="@dimen/dim_15sp"
        app:layout_constraintTop_toBottomOf="@id/itme_review_tv_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dim_8dp"
        android:paddingStart="@dimen/dim_4dp"
        android:paddingEnd="@dimen/dim_8dp"
        android:layout_marginTop="@dimen/dim_4dp"
        />


    <ImageView
        android:layout_width="@dimen/dim_50dp"
        android:layout_height="@dimen/dim_50dp"
        android:id="@+id/item_review_iv_photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_32dp"
        android:progressDrawable="@drawable/smile_rate_bar"
        app:layout_constraintStart_toEndOf="@id/itme_review_tv_desc"
        />

</androidx.constraintlayout.widget.ConstraintLayout>