<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="@dimen/dim_300dp"
        android:layout_height="@dimen/dim_30dp"
        android:id="@+id/review_client_tv_review"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dim_16dp"
        android:textSize="@dimen/dim_20sp"
        android:textStyle="bold"
        android:gravity="start"
        android:text="@string/share_your_comment_or_review"
        />

    <Button
        android:layout_width="@dimen/dim_300dp"
        android:layout_height="@dimen/dim_50dp"
        android:background="@drawable/btn"
        android:id="@+id/review_client_btn_add"
        app:layout_constraintTop_toBottomOf="@id/review_client_tv_review"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dim_16dp"
        android:textSize="@dimen/dim_20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="@string/add_coment_or_review"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/review_client_recyclerview"
        app:layout_constraintTop_toBottomOf="@+id/review_client_btn_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/dim_8dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>