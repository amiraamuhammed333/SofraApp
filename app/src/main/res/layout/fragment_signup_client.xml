<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/signup_client_iv_photo"
        android:layout_width="@dimen/dim_70dp"
        android:layout_height="@dimen/dim_110dp"
        android:layout_marginStart="@dimen/dim_150dp"
        android:layout_marginTop="@dimen/dim_30dp"
        android:background="@drawable/oval"
        app:srcCompat="@drawable/ic_person_add" />

    <EditText
        android:id="@+id/signup_client_et_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_40dp"
        android:layout_marginStart="@dimen/dim_20dp"
        android:layout_marginTop="@dimen/dim_30dp"
        android:layout_marginEnd="@dimen/dim_20dp"
        android:background="@null"
        android:drawableStart="@drawable/ic_person"
        android:hint="@string/name"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dim_20dp"
        android:layout_marginEnd="@dimen/dim_20dp"
        android:src="@color/white" />

    <EditText
        android:id="@+id/signup_client_et_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_40dp"
        android:layout_marginStart="@dimen/dim_20dp"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_20dp"
        android:background="@null"
        android:drawableStart="@drawable/ic_email"
        android:hint="@string/emial"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dim_20dp"
        android:layout_marginEnd="@dimen/dim_20dp"
        android:src="@color/white" />


    <EditText
        android:id="@+id/signup_client_et_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_40dp"
        android:layout_marginStart="@dimen/dim_20dp"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_20dp"
        android:background="@null"
        android:drawableStart="@drawable/ic_phone"
        android:hint="@string/phone"
        android:inputType="phone"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dim_20dp"
        android:layout_marginEnd="@dimen/dim_20dp"
        android:src="@color/white" />


    <Spinner
        android:id="@+id/signup_client_spinner_city"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_40dp"
        android:layout_marginStart="@dimen/dim_20dp"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_20dp"
        android:drawableStart="@drawable/ic_home"
        android:hint="@string/city"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dim_20dp"
        android:layout_marginEnd="@dimen/dim_20dp"
        android:src="@color/white" />


    <Spinner
        android:id="@+id/signup_client_spinner_region"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_40dp"
        android:layout_marginStart="@dimen/dim_20dp"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_20dp"
        android:drawableStart="@drawable/ic_home"
        android:hint="@string/region"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dim_20dp"
        android:layout_marginEnd="@dimen/dim_20dp"
        android:src="@color/white" />

    <EditText
        android:id="@+id/signup_client_et_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_40dp"
        android:layout_marginStart="@dimen/dim_20dp"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_20dp"
        android:background="@null"
        android:drawableStart="@drawable/ic_password"
        android:hint="@string/password"
        android:inputType="numberPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dim_20dp"
        android:layout_marginEnd="@dimen/dim_20dp"
        android:src="@color/white" />


    <EditText
        android:id="@+id/signup_client_et_confiem_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_40dp"
        android:layout_marginStart="@dimen/dim_20dp"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_20dp"
        android:background="@null"
        android:drawableStart="@drawable/ic_password"
        android:hint="@string/confirm_password"
        android:inputType="numberPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/white"

        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dim_20dp"
        android:layout_marginEnd="@dimen/dim_20dp"
        android:src="@color/white" />


    <Button
        android:id="@+id/signup_btn_login"
        android:layout_width="@dimen/dim_200dp"
        android:layout_height="@dimen/dim_50dp"
        android:layout_marginStart="@dimen/dim_70dp"
        android:layout_marginTop="@dimen/dim_50dp"
        android:background="@drawable/btn"
        android:text="@string/signup"
        android:textColor="@color/white"
        android:textSize="@dimen/dim_25sp" />


</LinearLayout>