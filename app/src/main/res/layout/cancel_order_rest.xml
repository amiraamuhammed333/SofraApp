<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dim_400dp"
    android:layout_height="@dimen/dim_400dp"
    android:background="@color/dark_grey">

    <TextView
        android:layout_width="@dimen/dim_300dp"
        android:layout_height="@dimen/dim_40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/reason_for_cancellation"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dim_32dp"
        android:layout_marginStart="@dimen/dim_16dp"
        android:textSize="@dimen/dim_25sp"
        android:gravity="center"
        android:inputType="text"
        android:id="@+id/cancel_order_res_tv"
        android:textColor="@color/red"/>

    <EditText
        android:layout_width="@dimen/dim_300dp"
        android:layout_height="@dimen/dim_200dp"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="@string/please_enter_reason_for_cancellation"
        android:layout_marginEnd="@dimen/dim_16dp"
        android:layout_marginStart="@dimen/dim_16dp"
        android:paddingEnd="@dimen/dim_16dp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dim_32dp"
        android:background="@drawable/rectangle_curved_white"
        app:layout_constraintTop_toBottomOf="@id/cancel_order_res_tv"
        android:paddingStart="@dimen/dim_16dp"
        android:textSize="@dimen/dim_15sp"
        android:id="@+id/cancel_order_res_et_reason"
        android:textColor="@color/red"/>
    <Button
        android:layout_width="@dimen/dim_150dp"
        android:layout_height="@dimen/dim_50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/cancel"
        android:layout_marginEnd="@dimen/dim_16dp"
        android:layout_marginStart="@dimen/dim_90dp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dim_32dp"
        android:background="@drawable/btn"
        app:layout_constraintTop_toBottomOf="@id/cancel_order_res_et_reason"
        android:textSize="@dimen/dim_25sp"
        android:id="@+id/cancel_order_res_btn_cancel"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>