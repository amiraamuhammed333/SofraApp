<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey">

    <TextView
        android:layout_width="@dimen/dim_200dp"
        android:layout_height="@dimen/dim_40dp"
        android:id="@+id/add_item_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dim_16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/dim_30dp"
        android:text="@string/choose_review"
        />

    <ImageView
        android:layout_width="@dimen/dim_50dp"
        android:layout_height="@dimen/dim_50dp"
        android:id="@+id/add_review_iv_angry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_item_tv"
        android:layout_marginTop="@dimen/dim_32dp"
        android:layout_marginStart="@dimen/dim_16dp"
        app:srcCompat="@drawable/ic_very_angry"
        />
    <ImageView
        android:layout_width="@dimen/dim_50dp"
        android:layout_height="@dimen/dim_50dp"
        android:id="@+id/add_review_iv_bad"
        app:layout_constraintStart_toEndOf="@id/add_review_iv_angry"
        app:layout_constraintTop_toBottomOf="@id/add_item_tv"
        android:layout_marginTop="@dimen/dim_32dp"
        android:layout_marginStart="@dimen/dim_16dp"
        app:srcCompat="@drawable/ic_mood_bad"
        />
    <ImageView
        android:layout_width="@dimen/dim_50dp"
        android:layout_height="@dimen/dim_50dp"
        android:id="@+id/add_review_iv_smile"
        app:layout_constraintStart_toEndOf="@id/add_review_iv_bad"
        app:layout_constraintTop_toBottomOf="@id/add_item_tv"
        android:layout_marginTop="@dimen/dim_32dp"
        android:layout_marginStart="@dimen/dim_16dp"
        app:srcCompat="@drawable/ic_smile"
        />
    <ImageView
        android:layout_width="@dimen/dim_50dp"
        android:layout_height="@dimen/dim_50dp"
        android:id="@+id/add_review_iv_satisified"
        app:layout_constraintStart_toEndOf="@id/add_review_iv_smile"
        app:layout_constraintTop_toBottomOf="@id/add_item_tv"
        android:layout_marginTop="@dimen/dim_32dp"
        android:layout_marginStart="@dimen/dim_16dp"
        app:srcCompat="@drawable/ic_very_satisfied_"
        />
    <ImageView
        android:layout_width="@dimen/dim_50dp"
        android:layout_height="@dimen/dim_50dp"
        android:id="@+id/add_review_iv_love"
        app:layout_constraintStart_toEndOf="@id/add_review_iv_satisified"
        app:layout_constraintTop_toBottomOf="@id/add_item_tv"
        android:layout_marginTop="@dimen/dim_32dp"
        android:layout_marginStart="@dimen/dim_16dp"
        app:srcCompat="@drawable/ic_love"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dim_16dp"
        />


    <EditText
        android:layout_width="@dimen/dim_250dp"
        android:layout_height="@dimen/dim_100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_review_iv_angry"
        android:hint="@string/add_review"
        android:layout_marginTop="@dimen/dim_16dp"
        android:paddingStart="@dimen/dim_8dp"
        android:background="@drawable/rectangle_white"
        android:id="@+id/add_review_et_rview"
        />
    <Button
        android:layout_width="@dimen/dim_100dp"
        android:layout_height="@dimen/dim_30dp"
        android:background="@drawable/btn"
        android:textSize="@dimen/dim_20sp"
        android:text="@string/add"
        android:id="@+id/add_review_btn_add"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_review_et_rview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dim_16dp"
        android:layout_marginTop="@dimen/dim_16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>