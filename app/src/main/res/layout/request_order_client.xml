<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_110dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/request_order_iv_photo"
        android:layout_margin="@dimen/dim_16dp"
        android:background="@drawable/shadow_rectangle"
        />

    <TextView
        android:layout_width="@dimen/dim_110dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dim_12sp"
        android:paddingStart="@dimen/dim_8dp"
        android:background="@drawable/btn"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/request_order_iv_photo"
        app:layout_constraintTop_toTopOf="@id/request_order_iv_photo"
        android:id="@+id/request_order_tv_offerPrice"
        android:layout_marginTop="@dimen/dim_20dp"

        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dim_90dp"
        android:layout_height="@dimen/album_dp_100"
        android:layout_marginEnd="@dimen/dim_8dp"
        android:layout_marginStart="@dimen/dim_8dp"
        app:layout_constraintTop_toTopOf="@id/request_order_iv_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/request_order_constrain"
        android:background="@drawable/shadow_rectangle"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/dim_15sp"
            android:textColor="@color/red"
            android:paddingStart="@dimen/dim_8dp"
            android:id="@+id/request_order_tv_name"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_30dp"
            app:layout_constraintTop_toBottomOf="@id/request_order_tv_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/dim_15sp"
            android:paddingStart="@dimen/dim_8dp"
            android:id="@+id/request_order_tv_description"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_30dp"
            app:layout_constraintTop_toBottomOf="@id/request_order_tv_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/dim_15sp"
            android:id="@+id/request_order_tv_price"
            android:paddingBottom="@dimen/dim_8dp"
            android:paddingStart="@dimen/dim_8dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/request_order_constrain"
        android:layout_margin="@dimen/dim_16dp"
        android:id="@+id/request_order_view1"
        android:background="@color/dark_grey"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/request_order_view1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dim_16dp"
        android:text="@string/private_request"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_20sp"
        android:layout_marginTop="@dimen/dim_16dp"
        android:id="@+id/request_ordertv_private_request"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_100"
        app:layout_constraintTop_toBottomOf="@id/request_ordertv_private_request"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/request_order_et_enter_your_request"
        android:background="@drawable/shadow_rectangle"
        android:layout_margin="@dimen/dim_16dp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/request_order_et_enter_your_request"
        android:layout_margin="@dimen/dim_16dp"
        android:id="@+id/request_order_view2"
        android:background="@color/dark_grey"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/request_order_view2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dim_16dp"
        android:text="@string/the_required_number"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_20sp"
        android:layout_marginTop="@dimen/dim_16dp"
        android:id="@+id/request_ordert_tv_theRequired_number"

        />

    <EditText
        android:layout_width="@dimen/dim_150dp"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintTop_toBottomOf="@id/request_ordert_tv_theRequired_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dim_16dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="@dimen/dim_20sp"
        android:text="1"
        android:layout_marginTop="@dimen/dim_16dp"
        android:id="@+id/request_ordert_tv_number"
        android:background="@drawable/shadow_rectangle"
        />
    <ImageButton
        android:layout_width="@dimen/dim_30dp"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/request_ordert_tv_theRequired_number"
        app:layout_constraintEnd_toStartOf="@id/request_ordert_tv_number"
        android:layout_margin="@dimen/dim_16dp"
        android:id="@+id/request_ordert_ib_decrease"
        android:background="@drawable/shadow_oval"
        app:srcCompat="@drawable/ic_remove"
        />

    <ImageButton
        android:layout_width="@dimen/dim_30dp"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintStart_toEndOf="@id/request_ordert_tv_number"
        app:layout_constraintTop_toBottomOf="@id/request_ordert_tv_theRequired_number"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/dim_16dp"
        android:id="@+id/request_ordert_ib_increase"
        app:srcCompat="@drawable/ic_add"
        android:background="@drawable/shadow_oval"

        />
    <ImageButton
        android:layout_width="@dimen/dim_50dp"
        android:layout_height="@dimen/dim_50dp"
        app:layout_constraintStart_toEndOf="@id/request_ordert_tv_number"
        app:layout_constraintTop_toBottomOf="@id/request_ordert_tv_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/dim_16dp"
        android:id="@+id/request_ordert_ib_shopping"
        app:srcCompat="@drawable/ic_shopping_white"
        android:background="@drawable/btn"

        />
</androidx.constraintlayout.widget.ConstraintLayout>