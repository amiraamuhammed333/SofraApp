<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/dim_100dp"
        android:layout_height="@dimen/dim_100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/edit_profile_restaurant_image"
        app:layout_constraintTop_toTopOf="parent"
        app:civ_circle_background_color="@color/dark_grey"
        app:civ_border_color="@color/grey"
        android:layout_marginTop="@dimen/dim_16dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_30dp"
        android:id="@+id/edit_profile_restaurant_name"
        android:background="@drawable/shadow_rectangle_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/dim_15sp"
        android:hint="@string/name"
        android:paddingStart="@dimen/dim_8dp"
        android:drawableStart="@drawable/ic_person"
        android:layout_marginStart="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_restaurant_image"
        android:layout_marginTop="@dimen/dim_8dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_30dp"
        android:id="@+id/edit_profile_restaurant_email"
        android:background="@drawable/shadow_rectangle_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/dim_15sp"
        android:hint="@string/emial"
        android:paddingStart="@dimen/dim_8dp"
        android:drawableStart="@drawable/ic_email_black"
        android:layout_marginStart="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_restaurant_name"
        android:layout_marginTop="@dimen/dim_8dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_30dp"
        android:id="@+id/edit_profile_restaurant_delivery_time"
        android:background="@drawable/shadow_rectangle_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/dim_15sp"
        android:hint="@string/delivery_time"
        android:paddingStart="@dimen/dim_8dp"
        android:drawableStart="@drawable/ic_time"
        android:layout_marginStart="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_restaurant_email"
        android:layout_marginTop="@dimen/dim_8dp"
        />

    <Spinner
        android:id="@+id/edit_profile_restaurant_spinner_city"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_40dp"
        android:layout_marginStart="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_restaurant_delivery_time"
        android:layout_marginTop="@dimen/dim_8dp"
        android:drawableStart="@drawable/ic_home"
        android:background="@drawable/shadow_rectangle_grey"
        android:hint="@string/city"
        android:inputType="text" />

    <Spinner
        android:id="@+id/edit_profile_restaurant_spinner_region"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_40dp"
        android:layout_marginStart="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_restaurant_spinner_city"
        android:layout_marginTop="@dimen/dim_8dp"
        android:drawableStart="@drawable/ic_home"
        android:background="@drawable/shadow_rectangle_grey"
        android:hint="@string/city"
        android:inputType="text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_30dp"
        android:id="@+id/edit_profile_restaurant_min_order"
        android:background="@drawable/shadow_rectangle_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/dim_15sp"
        android:hint="@string/minimum_order"
        android:paddingStart="@dimen/dim_8dp"
        android:drawableStart="@drawable/ic_money_black"
        android:layout_marginStart="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_restaurant_spinner_region"
        android:layout_marginTop="@dimen/dim_8dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_30dp"
        android:id="@+id/edit_profile_restaurant_delivery_charge"
        android:background="@drawable/shadow_rectangle_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/dim_15sp"
        android:hint="@string/delivery_charge"
        android:paddingStart="@dimen/dim_8dp"
        android:drawableStart="@drawable/ic_money_black"
        android:layout_marginStart="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_restaurant_min_order"
        android:layout_marginTop="@dimen/dim_8dp"
        />
    <TextView
        android:layout_width="@dimen/dim_100dp"
        android:layout_height="@dimen/dim_30dp"
        android:id="@+id/edit_profile_restaurant_tv"
        android:text="@string/state"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="@dimen/dim_8dp"
        android:textSize="@dimen/dim_25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dim_16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_restaurant_delivery_charge"
        android:layout_marginStart="@dimen/dim_16dp"/>

    <Switch
        android:layout_width="@dimen/dim_50dp"
        android:layout_height="@dimen/dim_50dp"
        app:layout_constraintStart_toEndOf="@id/edit_profile_restaurant_tv"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_restaurant_delivery_charge"
        android:layout_marginTop="@dimen/dim_13dp"
        android:clickable="true"
        android:id="@+id/edit_profile_restaurant_switch"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_30dp"
        android:id="@+id/edit_profile_restaurant_phone"
        android:background="@drawable/shadow_rectangle_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/dim_15sp"
        android:hint="@string/phone"
        android:paddingStart="@dimen/dim_8dp"
        android:drawableStart="@drawable/ic_call_black"
        android:layout_marginStart="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_restaurant_tv"
        android:layout_marginTop="@dimen/dim_8dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_30dp"
        android:id="@+id/edit_profile_restaurant_whats"
        android:background="@drawable/shadow_rectangle_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/dim_15sp"
        android:hint="@string/whats"
        android:paddingStart="@dimen/dim_8dp"
        android:drawableStart="@drawable/ic_call_black"
        android:layout_marginStart="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_restaurant_phone"
        android:layout_marginTop="@dimen/dim_8dp"
        />
    <Button
        android:layout_width="@dimen/dim_150dp"
        android:layout_height="@dimen/dim_40dp"
        android:id="@+id/edit_profile_restaurant_btn_update"
        android:background="@drawable/btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/dim_15sp"
        android:textColor="@color/white"
        android:text="@string/update"
        android:paddingStart="@dimen/dim_8dp"
        android:layout_marginStart="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_restaurant_whats"
        android:layout_marginTop="@dimen/dim_32dp"
        />





</androidx.constraintlayout.widget.ConstraintLayout>