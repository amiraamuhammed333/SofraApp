<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/shadow_rectangle"
    android:layout_height="@dimen/dim_200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="@dimen/dim_100dp"
        android:layout_height="@dimen/dim_100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dim_8dp"
        android:id="@+id/item_current_order_restaurant_Image"
        android:background="@drawable/shadow_rectangle"
        android:layout_marginTop="@dimen/dim_32dp"/>

    <TextView
        android:layout_width="@dimen/dim_150dp"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_current_order_restaurant_Image"
        android:id="@+id/item_current_order_restaurant_tv_name"
        android:layout_marginStart="@dimen/dim_16dp"
        android:textSize="@dimen/dim_15sp"
        android:layout_marginTop="@dimen/dim_16dp" />

    <TextView
        android:layout_width="@dimen/dim_150dp"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintTop_toBottomOf="@id/item_current_order_restaurant_tv_name"
        app:layout_constraintStart_toEndOf="@+id/item_current_order_restaurant_Image"
        android:id="@+id/item_current_order_restaurant_tv_order_id"
        android:layout_marginStart="@dimen/dim_16dp"
        android:textSize="@dimen/dim_15sp"
        android:layout_marginTop="@dimen/dim_4dp" />

    <TextView
        android:layout_width="@dimen/dim_150dp"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintTop_toBottomOf="@id/item_current_order_restaurant_tv_order_id"
        app:layout_constraintStart_toEndOf="@+id/item_current_order_restaurant_Image"
        android:id="@+id/item_current_order_restaurant_et_total"
        android:layout_marginStart="@dimen/dim_16dp"
        android:textSize="@dimen/dim_15sp"
        android:layout_marginTop="@dimen/dim_4dp" />


    <TextView
        android:layout_width="@dimen/dim_250dp"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintTop_toBottomOf="@id/item_current_order_restaurant_et_total"
        app:layout_constraintStart_toEndOf="@+id/item_current_order_restaurant_Image"
        android:id="@+id/item_current_order_restaurant_et_address"
        android:layout_marginStart="@dimen/dim_16dp"
        android:textSize="@dimen/dim_15sp"
        android:layout_marginBottom="@dimen/dim_8dp"
        android:layout_marginTop="@dimen/dim_4dp" />


    <Button
        android:layout_width="@dimen/dim_150dp"
        android:layout_height="@dimen/dim_40dp"
        app:layout_constraintTop_toBottomOf="@id/item_current_order_restaurant_et_address"
        app:layout_constraintStart_toEndOf="@id/item_current_order_restaurant_btn_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dim_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:paddingStart="@dimen/dim_16dp"
        android:text="@string/confirm_delivery"
        android:drawableStart="@drawable/ic_like"
        android:id="@+id/item_current_order_restaurant_btn_confirm"
        android:background="@drawable/btn_green"
        />


    <Button
        android:layout_width="@dimen/dim_150dp"
        android:layout_height="@dimen/dim_40dp"
        app:layout_constraintTop_toBottomOf="@id/item_current_order_restaurant_et_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dim_8dp"
        app:layout_constraintEnd_toStartOf="@id/item_current_order_restaurant_btn_confirm"
        android:textSize="@dimen/dim_15sp"
        android:text="@string/cancel"
        android:drawableStart="@drawable/ic_close"
        android:paddingStart="@dimen/dim_16dp"
        android:textColor="@color/white"
        android:id="@+id/item_current_order_restaurant_btn_cancel"
        android:background="@drawable/btn_blue"
        />


</androidx.constraintlayout.widget.ConstraintLayout>