<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_150dp"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/dim_4dp"
    android:layout_marginEnd="@dimen/dim_4dp"
    android:layout_marginBottom="@dimen/dim_4dp"
    android:id="@+id/item_offer_restaurant"
    app:dragEdge="right"
    android:background="@null"
    app:mode="same_level"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dim_100dp"
        android:orientation="horizontal"
        android:padding="@dimen/dim_16dp">

        <ImageButton
            android:layout_width="@dimen/dim_40dp"
            android:layout_height="@dimen/dim_40dp"
            android:id="@+id/item_offer_restaurant_delete"
            android:layout_margin="@dimen/dim_4dp"
            android:background="@drawable/ic_delete"
            />
        <ImageButton
            android:layout_width="@dimen/dim_40dp"
            android:layout_height="@dimen/dim_40dp"
            android:id="@+id/item_offer_restaurant_update"
            android:layout_margin="@dimen/dim_4dp"
            android:background="@drawable/ic_update"
            />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sub_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_100dp"
        android:background="@drawable/shadow_rectangle">

        <ImageView
            android:layout_width="@dimen/dim_100dp"
            android:layout_height="@dimen/dim_80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/dim_8dp"
            android:background="@drawable/shadow_rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/item_offer_restaurant_iv_photo"
            />
        <TextView
            android:layout_width="@dimen/dim_200dp"
            android:layout_height="@dimen/dim_30dp"
            android:id="@+id/item_offer_restaurant_tv_name"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dim_32dp"
            android:paddingEnd="@dimen/dim_8dp"
            android:textColor="@color/red"
            android:paddingStart="@dimen/dim_8dp"
            android:layout_marginStart="@dimen/dim_8dp"
            app:layout_constraintStart_toEndOf="@id/item_offer_restaurant_iv_photo"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



</com.chauthai.swipereveallayout.SwipeRevealLayout>