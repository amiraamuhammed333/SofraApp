<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="@dimen/dim_150dp"
        android:layout_height="@dimen/dim_40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dim_16dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_25sp"
        android:textStyle="bold"
        android:text="@string/add_photo"
        android:id="@+id/add_new_item_restaurant_tv_addPhoto"

        />
    <ImageView
        android:layout_width="@dimen/dim_100dp"
        android:layout_height="@dimen/dim_100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_new_item_restaurant_tv_addPhoto"
        android:id="@+id/add_new_item_restaurant_iv_photo"
        android:layout_marginTop="@dimen/dim_8dp"
        android:background="@drawable/shadow_rectangle"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_30dp"
        android:id="@+id/add_new_item_restaurant_et_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_new_item_restaurant_iv_photo"
        android:layout_marginTop="@dimen/dim_32dp"
        android:layout_marginBottom="@dimen/dim_16dp"
        android:layout_marginStart="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_16dp"
        android:hint="@string/name"
        android:paddingStart="@dimen/dim_8dp"
        android:background="@drawable/shadow_rectangle"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_100dp"
        android:id="@+id/add_new_item_restaurant_et_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_new_item_restaurant_et_name"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginBottom="@dimen/dim_16dp"
        android:layout_marginStart="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_16dp"
        android:hint="@string/description"
        android:paddingStart="@dimen/dim_8dp"
        android:background="@drawable/shadow_rectangle"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_30dp"
        android:id="@+id/add_new_item_restaurant_et_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_new_item_restaurant_et_desc"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginBottom="@dimen/dim_16dp"
        android:layout_marginStart="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_16dp"
        android:hint="@string/price"
        android:paddingStart="@dimen/dim_8dp"
        android:background="@drawable/shadow_rectangle"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_30dp"
        android:id="@+id/add_new_item_restaurant_et_priceOffer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_new_item_restaurant_et_price"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginBottom="@dimen/dim_16dp"
        android:layout_marginStart="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_16dp"
        android:hint="@string/price_offer"
        android:paddingStart="@dimen/dim_8dp"
        android:background="@drawable/shadow_rectangle"
        />


    <Button
        android:layout_width="@dimen/dim_150dp"
        android:layout_height="@dimen/dim_40dp"
        android:id="@+id/add_new_item_restaurant_btn_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_new_item_restaurant_et_priceOffer"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginBottom="@dimen/dim_100dp"
        android:layout_marginStart="@dimen/dim_32dp"
        android:layout_marginEnd="@dimen/dim_32dp"
        android:text="@string/add"
        android:textColor="@color/white"
        android:textSize="@dimen/dim_25sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/btn"
        />




</androidx.constraintlayout.widget.ConstraintLayout>