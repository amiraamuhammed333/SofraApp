<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/order_detail_client_tv"
        android:layout_margin="@dimen/dim_16dp"
        android:text="order detail"
        android:gravity="center"
        android:textSize="@dimen/dim_25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_detail_client_tv"
        android:layout_margin="@dimen/dim_16dp"
        android:id="@+id/order_detail_client_et_note"
        android:hint="add note"
        android:paddingStart="@dimen/dim_8dp"
        android:background="@drawable/shadow_rectangle"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_detail_client_et_note"
        android:layout_marginStart="@dimen/dim_32dp"
        android:layout_marginEnd="@dimen/dim_32dp"
        android:layout_marginTop="@dimen/dim_4dp"
        android:textColor="@color/black"
        android:text="@string/address"
        android:paddingStart="@dimen/dim_8dp"
        android:textSize="@dimen/dim_15sp"
        android:id="@+id/order_detail_client_tv_addr"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dim_32dp"
        android:layout_marginEnd="@dimen/dim_32dp"
        app:layout_constraintTop_toBottomOf="@id/order_detail_client_tv_addr"
        android:hint="@string/enter"
        android:textColor="@color/red"
        android:background="@null"
        android:paddingStart="@dimen/dim_8dp"
        android:textSize="@dimen/dim_15sp"
        android:id="@+id/order_detail_client_et_address"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_detail_client_et_address"
        android:layout_marginStart="@dimen/dim_32dp"
        android:layout_marginEnd="@dimen/dim_32dp"
        android:text="@string/paying_off"
        android:textColor="@color/black"
        android:paddingStart="@dimen/dim_8dp"
        android:textSize="@dimen/dim_15sp"
        android:id="@+id/order_detail_client_tv_payingOff"
        />
    <TextView
        android:layout_width="@dimen/dim_150dp"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_detail_client_tv_payingOff"
        android:layout_marginStart="@dimen/dim_40dp"
        android:layout_marginEnd="@dimen/dim_32dp"
        android:text="@string/patment_on_receipt"
        android:textColor="@color/black"
        android:paddingStart="@dimen/dim_8dp"
        app:layout_constraintEnd_toStartOf="@id/order_detail_client_tv_online"
        android:textSize="@dimen/dim_15sp"
        android:id="@+id/order_detail_client_tv_receive"
        />

    <TextView
        android:layout_width="@dimen/dim_150dp"
        android:layout_height="@dimen/dim_30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_detail_client_tv_payingOff"
        android:layout_marginStart="@dimen/dim_32dp"
        android:layout_marginEnd="@dimen/dim_40dp"
        android:text="@string/payment_online"
        android:textColor="@color/black"
        android:paddingStart="@dimen/dim_8dp"
        app:layout_constraintStart_toEndOf="@id/order_detail_client_tv_receive"
        android:textSize="@dimen/dim_15sp"
        android:id="@+id/order_detail_client_tv_online"
        />
    <ImageButton
        android:layout_width="@dimen/dim_50dp"
        android:layout_height="@dimen/dim_50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_detail_client_tv_online"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_70dp"
        android:background="@drawable/shadow_oval"
        android:paddingStart="@dimen/dim_8dp"
        android:id="@+id/order_detail_client_ib_online"
        />
    <ImageButton
        android:layout_width="@dimen/dim_50dp"
        android:layout_height="@dimen/dim_50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_detail_client_tv_online"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginStart="@dimen/dim_70dp"
        android:background="@drawable/shadow_oval"
        android:paddingStart="@dimen/dim_8dp"
        android:id="@+id/order_detail_client_ib_receive"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_detail_client_ib_receive"
        android:background="@drawable/shadow_rectangle"
        android:layout_marginTop="@dimen/dim_16dp"
        android:id="@+id/constrain"
        >
    <TextView
        android:layout_width="@dimen/dim_120dp"
        android:layout_height="@dimen/dim_30dp"
        android:id="@+id/order_detail_client_tv1"
        android:text="@string/total"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dim_32dp"
        android:paddingStart="@dimen/dim_8dp"
        android:layout_marginTop="@dimen/dim_16dp"/>

        <TextView
            android:layout_width="@dimen/dim_120dp"
            android:layout_height="@dimen/dim_30dp"
            android:id="@+id/order_detail_client_tv_total"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/order_detail_client_tv1"
            android:layout_marginStart="@dimen/dim_32dp"
            android:paddingStart="@dimen/dim_8dp"
            android:layout_marginTop="@dimen/dim_16dp"/>

    <TextView
        android:layout_width="@dimen/dim_120dp"
        android:layout_height="@dimen/dim_30dp"
        android:id="@+id/order_detail_client_tv_delivary"
        android:text="@string/delivery_charge"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_15sp"
        app:layout_constraintTop_toBottomOf="@id/order_detail_client_tv1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dim_32dp"
        android:paddingStart="@dimen/dim_8dp"
       />
        <TextView
            android:layout_width="@dimen/dim_120dp"
            android:layout_height="@dimen/dim_30dp"
            android:id="@+id/order_detail_client_tv_delivary_charge"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_15sp"
            app:layout_constraintTop_toBottomOf="@id/order_detail_client_tv_total"
            app:layout_constraintStart_toEndOf="@id/order_detail_client_tv_delivary"
            android:layout_marginStart="@dimen/dim_32dp"
            android:paddingStart="@dimen/dim_8dp"
            />
        <TextView
            android:layout_width="@dimen/dim_120dp"
            android:layout_height="@dimen/dim_30dp"
            android:id="@+id/order_detail_client_tv_total_pay"
            android:text="@string/total_payment"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_15sp"
            app:layout_constraintTop_toBottomOf="@id/order_detail_client_tv_delivary"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dim_32dp"
            android:paddingStart="@dimen/dim_8dp"
            />
        <TextView
            android:layout_width="@dimen/dim_120dp"
            android:layout_height="@dimen/dim_30dp"
            android:id="@+id/order_detail_client_tv_total_payment"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_15sp"
            app:layout_constraintTop_toBottomOf="@id/order_detail_client_tv_delivary_charge"
            app:layout_constraintStart_toEndOf="@id/order_detail_client_tv_total_pay"
            android:layout_marginStart="@dimen/dim_32dp"
            android:paddingStart="@dimen/dim_8dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:layout_width="@dimen/dim_200dp"
        android:layout_height="@dimen/dim_70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constrain"
        android:text="@string/confirmation_order"
        android:textSize="@dimen/dim_20sp"
        android:textColor="@color/white"
        android:background="@drawable/btn"
        android:id="@+id/order_detail_client_btn_confirm"
        android:layout_marginTop="@dimen/dim_4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dim_30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>