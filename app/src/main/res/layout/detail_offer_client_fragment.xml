<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:layout_width="@dimen/dim_150dp"
    android:layout_height="@dimen/album_dp_30"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:text="@string/detail_offer"
    android:textColor="@color/black"
    android:textSize="@dimen/dim_25sp"
    android:textStyle="bold"
    android:gravity="center"
    android:id="@+id/detail_offer_client_tv"
    android:layout_marginTop="@dimen/dim_16dp"
    />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dim_350dp"
        android:layout_height="@dimen/dim_300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_offer_client_tv"
        android:layout_marginTop="@dimen/dim_50dp"
        android:background="@drawable/shadow_rectangle_grey">

        <TextView
            android:layout_width="@dimen/dim_250dp"
            android:layout_height="@dimen/album_dp_30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_15sp"
            android:paddingStart="@dimen/dim_8dp"
            android:gravity="center"
            android:id="@+id/detail_offer_client_tv_name"
            android:layout_marginTop="@dimen/dim_32dp"
            />

        <TextView
            android:layout_width="@dimen/dim_250dp"
            android:layout_height="@dimen/album_dp_30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_offer_client_tv_name"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_15sp"
            android:paddingStart="@dimen/dim_8dp"
            android:gravity="center"
            android:id="@+id/detail_offer_client_tv_desc"
            android:layout_marginTop="@dimen/dim_16dp"
            />

        <TextView
            android:layout_width="@dimen/dim_250dp"
            android:layout_height="@dimen/album_dp_30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_offer_client_tv_desc"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_15sp"
            android:paddingStart="@dimen/dim_8dp"
            android:gravity="center"
            android:id="@+id/detail_offer_client_tv_start_at"
            android:layout_marginTop="@dimen/dim_16dp"
            />

        <TextView
            android:layout_width="@dimen/dim_250dp"
            android:layout_height="@dimen/album_dp_30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_offer_client_tv_start_at"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_15sp"
            android:paddingStart="@dimen/dim_8dp"
            android:gravity="center"
            android:id="@+id/detail_offer_client_tv_ending_at"
            android:layout_marginTop="@dimen/dim_16dp"
            />

        <Button
            android:layout_width="@dimen/dim_150dp"
            android:layout_height="@dimen/album_dp_30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_offer_client_tv_ending_at"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="@dimen/dim_8dp"
            android:gravity="center"
            android:text="@string/buy_now"
            android:background="@drawable/btn"
            android:id="@+id/detail_offer_client_tv_buy"
            android:layout_marginTop="@dimen/dim_16dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>